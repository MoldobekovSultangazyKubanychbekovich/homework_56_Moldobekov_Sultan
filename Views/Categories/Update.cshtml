@model Category
@{
    ViewBag.Title = "Изменить категорию";
}
<h3>Редактирование категории</h3>

<div class="row">

    <div class="category_update_form col-md-6">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="Update" method="post">
            <div class="form-floating mb-3">
                <input asp-for=Name type="text" value="@Model.Name" class="form-control" id="floatingInput">
                <label for="floatingInput">Название категории</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for=Description type="text" value="@Model.Description" class="form-control" id="floatingInput">
                <label for="floatingInput">Описание</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input asp-for=Id type="hidden" value="@Model.Id" class="form-control" id="floatingInput">
            <button class="btn btn-primary-success" type="submit">Изменить</button>
        </form>

    </div>

</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}