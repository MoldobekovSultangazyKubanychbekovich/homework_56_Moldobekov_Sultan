@model Category
@{
    ViewBag.Title = "Добавить категорию";
}
<h3>Заполните форму для добавления категории</h3>

<div class="row">

    <div class="category_create_form col-md-6">

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for=Name type ="text" class="form-control" id="floatingInput">
                <label for="floatingInput">Название категории</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for=Description type ="text" class="form-control" id="floatingInput">
                <label for="floatingInput">Описание</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button class="btn btn-outline-success" type="submit">Добавить</button>
        </form>

    </div>

</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}