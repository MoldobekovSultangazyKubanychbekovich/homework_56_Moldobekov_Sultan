@model List<Category>
@{
    ViewBag.Title = "Категории";
}

<h2>Категории</h2>
<a asp-action="Create" asp-controller="Categories" class="btn btn-primary text-white mb-3">Добавить категорию</a>
<div class="table_section">
    @if (@Model.Count == 0)
    {
        <p>Категории не добавлены</p>
    }
    else
    {
        <table style="width: 100%;">
            <tr>
                <th>Id</th>
                <th>Наименование</th>
                <th>Описание</th>
            </tr>
            @foreach (var c in @Model)
            {
               <tr>
                    <td>@c.Id</td>
                    <td>@c.Name</td>
                    <td>@c.Description</td>
                    <td>
                         <a class="btn btn-primary text-white" asp-action="Update" asp-controller="Categories" asp-route-categoryId="@c.Id" >Изменить</a>
                        <a class="btn btn-primary text-white" asp-action="Delete" asp-controller="Categories" asp-route-categoryId="@c.Id" >Удалить</a>
                    </td>
                </tr>
            }          
        </table>
    }
</div>
