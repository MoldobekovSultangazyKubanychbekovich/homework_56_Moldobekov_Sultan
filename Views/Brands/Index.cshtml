@model List<Brand>
@{
    ViewBag.Title = "Бренды";
}

<h2>Бренды</h2>
<a asp-action="Create" asp-controller="Brands" class="btn btn-primary text-white mb-3">Добавить бренд</a>
<div class="table_section">
    @if (@Model.Count == 0)
    {
        <p>Бренды не добавлены</p>
    }
    else
    {
        <table style="width: 100%;">
            <tr>
                <th>Id</th>
                <th>Наименование</th>
            </tr>
            @foreach (var b in @Model)
            {
               <tr>
                    <td>@b.Id</td>
                    <td>@b.Name</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Update" asp-controller="Brands" asp-route-brandId="@b.Id" >Изменить</a>
                        <a class="btn btn-primary text-white" asp-action="Delete" asp-controller="Brands" asp-route-brandId="@b.Id" >Удалить</a>
                    </td>
                </tr>
            }          
        </table>
    }
</div>
