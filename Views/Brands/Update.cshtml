@model Brand
@{
    ViewBag.Title = "Изменить бренд";
}
<h3>Редактирование бренда</h3>

<div class="row">

    <div class="brand_update_form col-md-6">

        <form asp-action="Update" asp-controller="Brands" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for=Name type="text" value="@Model.Name" class="form-control" id="floatingInput">
                <label for="floatingInput">Название бренда</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input asp-for=Id type="hidden" value="@Model.Id" class="form-control" id="floatingInput">
            <button class="btn btn-outline-success" type="submit">Изменить</button>
        </form>

    </div>

</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
